@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var id = "";
    id = ViewBag.id;
    var users = new List<DbOpertion.Models.Sys_User>();
    users = ViewBag.users;

    var data3 = new DbOpertion.Models.Extend.AllModel.GetData3Res();
    data3 = ViewBag.Data3;
}
@section js{
    <script src="~/assets/js/plugins/chartjs/Chart.min.js"></script>
    <script src="~/assets/js/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/js/plugins/select2/select2.full.min.js"></script>
    <script src="~/assets/js/plugins/masked-inputs/jquery.maskedinput.min.js"></script>
    <script src="~/assets/js/plugins/jquery-tags-input/jquery.tagsinput.min.js"></script>
    <script>
        $(function () {
            // Init page helpers (BS Datepicker + BS Colorpicker + Select2 + Masked Input + Tags Inputs plugins)
            App.initHelpers(['datepicker', 'colorpicker', 'select2', 'masked-inputs', 'tags-inputs']);
        });
    </script>

    <script>
        var userId=@id
    </script>


    <script src="~/Current/js/user/userdata.js?201809031504"></script>
}
@section css{
    <link rel="stylesheet" href="~/assets/js/plugins/bootstrap-datepicker/bootstrap-datepicker3.min.css">
    <link rel="stylesheet" href="~/assets/js/plugins/select2/select2.min.css">
    <link rel="stylesheet" href="~/assets/js/plugins/select2/select2-bootstrap.css">
}


<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
                数据统计 @*<small>Tables transformed with dynamic features. Powered by DataTables.</small>*@
            </h1>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content content-narrow">
    <!-- Chart.js Charts (initialized in js/pages/base_comp_charts.js), for more examples you can check out http://www.chartjs.org/docs/ -->

    <div class="row">
        <div class="col-sm-6 col-lg-3">
            <!-- Developer Plan -->
            <a class="block block-link-hover2 text-center" href="javascript:void(0)">
                <div class="block-header">
                    <h3 class="block-title">用户量</h3>
                </div>
                <div class="block-content block-content-full bg-warning">
                    <div class="h1 font-w700 text-white push-10">@data3.userCount</div>
                </div>
            </a>
            <!-- END Developer Plan -->
        </div>
        <div class="col-sm-6 col-lg-3">
            <!-- Startup Plan -->
            <a class="block block-link-hover2 text-center" href="javascript:void(0)">
                <div class="block-header">
                    <h3 class="block-title">活跃人数</h3>
                </div>
                <div class="block-content block-content-full bg-primary">
                    <div class="h1 font-w700 push-10">@data3.userOnLineCount</div>
                </div>
            </a>
            <!-- END Startup Plan -->
        </div>
        <div class="col-sm-6 col-lg-3">
            <!-- Business Plan -->
            <a class="block block-link-hover2 text-center" href="javascript:void(0)">
                <div class="block-header">
                    <h3 class="block-title">健身房数</h3>
                </div>
                <div class="block-content block-content-full bg-danger">
                    <div class="h1 font-w700 text-white push-10">@data3.gymCount</div>
                </div>
            </a>
            <!-- END Business Plan -->
        </div>
    </div>

    <div class="block">
        <div class="block-header">
            <h3 class="block-title fl">设备统计@*<small>Full</small>*@</h3>
            <div class="fc"></div>
        </div>
        <div class="block-content">
            <div class="row">
                <div class="col-sm-6">
                    <div class="dataTables_length" id="DataTables_Table_0_length">
                        <label>
                            <select class="form-control select-type ">
                                <option value="km">km</option>
                                <option value="cal">cal</option>
                                <option value="tkm">tkm</option>
                            </select>
                        </label>
                        <label>
                            <select class="form-control select-user ">
                                @foreach (var item in users)
                                {
                                    <option value="@item.Id">@item.UserName</option>
                                }
                            </select>
                        </label>
                        <label>
                            <input class="js-datepicker form-control Birthday" type="text" id="example-datepicker3" name="example-datepicker3" data-date-format="yyyy-mm-dd" placeholder="" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Lines Chart -->
                    <div class="block">
                        <div class="block-header">
                            <ul class="block-options">
                                <li>
                                    <button id="btn-refresh" type="button" data-action-mode="demo"><i class="si si-refresh"></i></button>
                                </li>
                            </ul>
                            <h3 class="block-title"></h3>
                        </div>
                        <div class="block-content block-content-full text-center">
                            <!-- Lines Chart Container -->
                            <div style="height: 330px;"><canvas class="js-chartjs-lines"></canvas></div>
                        </div>
                    </div>
                    <!-- END Lines Chart -->
                </div>
            </div>
        </div>
    </div>

    @*<h2 class="content-heading">Chart.js</h2>*@

    <!-- END Chart.js Charts -->

</div>
<!-- END Page Content -->