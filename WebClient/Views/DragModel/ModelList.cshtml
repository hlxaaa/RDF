<style>
    .headImg {
        cursor: pointer;
    }

    .block-content.block-content-narrow {
        padding-left: 5%;
        padding-right: 0%;
    }

    .myfg .col-xs-4 {
        line-height: 34px;
    }

    .tableWapper {
        overflow-x: auto;
    }

    .select-pass {
        width: calc( 100% - 20px ) !important
    }
