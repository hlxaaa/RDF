@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var url = "";
    url = ViewBag.url;

}
@section js{

    <script src="~/Current/js/DragModel/modelList.js?201809031504"></script>
}
@section css{
    <link rel="stylesheet" href="~/assets/js/plugins/datatables/jquery.dataTables.min.css">
}


<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
                模式管理 @*<small>Tables transformed with dynamic features. Powered by DataTables.</small>*@
            </h1>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content">
    <!-- Dynamic Table Full -->
    <div class="block">
        <div class="block-header">
            <h3 class="block-title fl">模式列表@*<small>Full</small>*@</h3>
            <button class="btn btn-default fr addModel" data-toggle="modal" data-target="#modal-popout" type="button">添加模式</button>
            @*<button class="btn btn-default fr addModel2" data-toggle="modal" data-target="#modal-popout" type="button">添加英文模式</button>*@
            <div class="fc"></div>
        </div>
        <div class="block-content">
            <div class="row">
                <div class="col-sm-6">
                    <div class="dataTables_length" id="DataTables_Table_0_length">
                        <label>
                            <select class="form-control select-size">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                            @*<select class="form-control select-isEnglish">
                                <option value="2">全部模式</option>
                                <option value="0">中文</option>
                                <option value="1">英文</option>
                            </select>*@
                            <select class="form-control select-type">
                                <option value="3">全部模式</option>
                                <option value="0">里程模式</option>
                                <option value="1">卡路里模式</option>
                                <option value="2">时间模式</option>
                            </select>
                        </label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div id="DataTables_Table_0_filter" class="dataTables_filter">
                        <label>
                            搜索:<input type="search" class="form-control input-search" style="width:initial">
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 tableWapper">
                    <table class="table table-bordered table-striped js-dataTable-full">
                        <thead>
                            <tr>
                                <th class="th-sort sorting" data-sort="id">ID</th>
                                <th class="th-sort sorting" data-sort="modelName">名称</th>
                                <th class="th-sort sorting" data-sort="modelNameE">英文名称</th>
                                <th class="th-sort sorting" data-sort="modelType">模式</th>
                                @*<th class="th-sort sorting" data-sort="m">模式阶段</th>
        <th class="th-sort sorting" data-sort="n">阻力</th>*@
                                <th class="text-center" style="width: 10%;">操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6">
                    <div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
                        <ul class="pagination">
                            <li class="paginate_button disabled">
                                <a><i class="fa fa-angle-left"></i></a>
                            </li>
                            <li class="paginate_button active"><a>1</a></li>
                            <li class="paginate_button"><a>2</a></li>
                            <li class="paginate_button"><a>3</a></li>
                            <li class="paginate_button"><a>4</a></li>
                            <li class="paginate_button">
                                <a><i class="fa fa-angle-right"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END Dynamic Table Full -->

</div>
<!-- END Page Content -->
<!-- Pop Out Modal -->
<div class="modal fade" id="modal-popout" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-popout" style="width:900px;">
        <div class="modal-content">
            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header bg-primary-dark">
                    <ul class="block-options">
                        <li>
                            <button data-dismiss="modal" type="button"><i class="si si-close"></i></button>
                        </li>
                    </ul>
                    <h3 class="block-title">模式详情</h3>
                </div>
                <div class="block-content">
                    <div class="block-content block-content-narrow">
                        <div class="form-horizontal push-10-t" action="base_forms_elements_modern.html" method="post" onsubmit="return false;">
                            <div class="col-md-12">
                                <div class="form-group col-md-6 myfg">
                                    <label class="col-xs-4" for="example-email-input">模式名称</label>
                                    <div class="col-sm-8">
                                        <input class="form-control modelName" type="text" name="example-email-input" placeholder="">
                                    </div>
                                </div>
                                <div class="form-group col-md-6 myfg">
                                    <label class="col-xs-4" for="example-email-input">英文名称</label>
                                    <div class="col-sm-8">
                                        <input class="form-control modelNameE" type="text" name="example-email-input" placeholder="">
                                    </div>
                                </div>
                                <div class="form-group col-md-6 myfg">
                                    <label class="col-xs-4" for="example-email-input">模式类型</label>
                                    <div class="col-sm-8">
                                        <select class="form-control modelType" name="example-select" size="1">
                                            <option value="0">里程模式</option>
                                            <option value="1">卡路里模式</option>
                                            <option value="2">时间模式</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 div-mn">
                                <div class="form-group col-md-6 myfg">
                                    <label class="col-xs-4 mType" for="example-email-input">模式阶段(米)</label>
                                    <div class="col-sm-8">
                                        <input class="form-control m" type="text" name="example-email-input" placeholder="">
                                    </div>
                                </div>
                                <div class="form-group col-md-6 myfg">
                                    <label class="col-xs-4" for="example-email-input">阻力</label>
                                    <div class="col-sm-8">
                                        <input class="form-control n" type="text" name="example-email-input" placeholder="">
                                    </div>
                                </div>
                                <i class="glyphicon glyphicon-remove-circle fa-2x btn-delMN"></i>
                            </div>
                            <div class="fc"></div>
                        </div>
                        <div class="fc"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="addMN" class="btn btn-info fl" type="button" style="margin-left:72px;">添加阶段</button>

                <button class="btn btn-sm btn-default" type="button" data-dismiss="modal">关闭</button>
                <button class="btn btn-sm btn-primary btn-save" type="button"><i class="fa fa-check"></i> <font id="saveBtn">添加</font></button>
            </div>
        </div>
    </div>
</div>
<!-- END Pop Out Modal -->